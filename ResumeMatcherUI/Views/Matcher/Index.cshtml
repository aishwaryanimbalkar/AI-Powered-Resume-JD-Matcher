@model MatchResultViewModel


<div class="matcher-container">
    
    <h2>AI-Powered Resume & JD Matcher</h2>
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="error-alert">
            <strong> Error:</strong> @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="Match" asp-controller="Matcher" method="post" enctype="multipart/form-data">
        
        <div class="form-group">
            <label>Resume (PDF):</label>
            <input type="file" name="resume" accept=".pdf" required />
        </div>

        <div class="form-group">
            <label>Job Description:</label>
            <textarea name="jobDescription" rows="5"  required></textarea>
        </div>

        <button type="submit">Match</button>
    </form>

    @if (Model != null)
    {
        <div class="result-box">
            <div>
                <strong>Fit Score:</strong> 
                <span class="score-value">@Model.FitScore/100</span>
            </div>
            <div class="explanation-text">
                <strong>Explanation:</strong>
                <p>@Model.Explanation</p>
            </div>
        </div>
    }
</div>
